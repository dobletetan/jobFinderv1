<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Cambia el color de fondo a naranja cuando se presiona -->
        <shape>
            <solid android:color="#FFA500" /> <!-- Color naranja cuando se presiona -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Borde transparente -->
        </shape>
    </item>
    <item>
        <!-- Estado predeterminado: fondo transparente -->
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Color de fondo transparente -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Borde transparente -->
        </shape>
    </item>
</selector>